{
  "title": "NovaPOS Checkout KPIs",
  "uid": "novapos-checkout-kpis",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "tags": ["novapos", "kpi"],
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "tenant",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(checkout_latency_seconds_bucket, tenant_id)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "store",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(checkout_latency_seconds_bucket{tenant_id=~\"$tenant\"}, store_id)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "p95 Checkout Latency (s)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(checkout_latency_seconds_bucket{tenant_id=~\"$tenant\",store_id=~\"$store\"}[5m])))",
          "legendFormat": "p95"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}},
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {"color": "green", "value": null},
          {"color": "red", "value": 2}
        ]
      }
    },
    {
      "type": "stat",
      "title": "Outbox Backlog",
      "gridPos": {"x": 0, "y": 14, "w": 6, "h": 6},
      "targets": [
        { "expr": "outbox_backlog", "legendFormat": "backlog" }
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}},
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {"color": "green", "value": null},
          {"color": "yellow", "value": 50},
          {"color": "red", "value": 100}
        ]
      }
    },
    {
      "type": "graph",
      "title": "Outbox Publish Rate",
      "gridPos": {"x": 6, "y": 14, "w": 18, "h": 6},
      "targets": [
        {"expr": "sum(rate(outbox_published_total[5m])) by (topic)", "legendFormat": "published {{topic}}"},
        {"expr": "sum(rate(outbox_publish_failures_total[5m])) by (topic)", "legendFormat": "failures {{topic}}"}
      ]
    },
    {
      "type": "stat",
      "title": "p50 Checkout Latency (s)",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(checkout_latency_seconds_bucket{tenant_id=~\"$tenant\",store_id=~\"$store\"}[5m])))",
          "legendFormat": "p50"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Tap Count (avg)",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "avg_over_time(checkout_tap_count{tenant_id=~\"$tenant\",store_id=~\"$store\"}[5m])",
          "legendFormat": "taps"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Checkout Latency Histogram",
      "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (le) (rate(checkout_latency_seconds_bucket{tenant_id=~\"$tenant\",store_id=~\"$store\"}[5m]))",
          "legendFormat": "le {{le}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Checkout Errors (rate)",
      "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (code) (rate(checkout_errors_total{tenant_id=~\"$tenant\",store_id=~\"$store\"}[5m]))",
          "legendFormat": "{{code}}"
        }
      ]
    }
  ]
}
